generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  User
  Admin
  Seller
  Developer
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  fullName String
  number   String   @unique
  password String
  role     Role
  profile  Profile? @relation(fields: [id], references: [userId])
}

model Profile {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl String // URL to the profile image
  userId   String @unique
  User     User[]
}
